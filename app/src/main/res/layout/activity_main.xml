<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CD853F"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/BtnAir"
        android:layout_width="165dp"
        android:layout_height="44dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="15dp"
        android:text="Premium Bus"
        android:background="#FFD700"
        android:textColor="#FFF"
        android:textStyle="bold" />


    <Button
        android:id="@+id/BtnFan"
        android:layout_width="164dp"
        android:layout_height="51dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="15dp"
        android:text="Standard Bus"
        android:background="#FFD700"
        android:textColor="#FFF"
        android:textStyle="bold" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo1" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="357dp"
        android:layout_margin="20dp"
        android:text="        Bus Service เกิดขึ้นจากกลุ่มคนรุ่นใหม่ที่มีความตั้งใจในการพัฒนาอุตสาหกรรมรถบัส ที่จะสร้างประสบการณ์ที่ดีที่สุดในการเดินทางให้กับทุกท่าน ทางเราได้นำเรื่องเทคโนโลยีที่ดีที่สุดมาประยุคใช้และให้บริการในการเดินทางแก่ทุกๆจุดหมายปลายทาง พวกเรามีความตั้งใจในการคัดเลือกยานพาหนะที่เรามั่นใจว่าปลอดภัยที่สุดให้กับลูกค้าของเรา เพราะสำหรับเราแล้วความปลอดภัยในการเดินทางสำหรับทุกท่านคือหน้าที่ของเราที่จะต้องดูแลให้ดีที่สุด"
        android:textColor="#FFFF" />


</LinearLayout>